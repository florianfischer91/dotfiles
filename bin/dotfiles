#!/bin/bash
set -e

# Paths
CONFIG_DIR="$HOME/.dotfiles"
DOTFILES_DIR="$HOME/.config/share/dotfiles"
SSH_DIR="$HOME/.ssh"

# Branch used when cloning the repository
BRANCH="${BRANCH:-main}"

export PATH="$PATH:$HOME/.local/bin"

# Install pipx
if ! [ -x "$(command -v pipx)" ]; then
  sudo apt install python3-pip python3-venv -y --no-install-recommends
  python3 -m pip install pipx-in-pipx --break-system-package
fi

# Install Ansible
if ! [ -x "$(command -v ansible)" ]; then
  pipx install "ansible-core<2.19" --include-deps --system-site-packages
fi

# Install Git
if ! [ -x "$(command -v git)" ]; then
  sudo apt install git -y --no-install-recommends
fi

# Generate SSH keys
if ! [[ -f "$SSH_DIR/authorized_keys" ]]; then
  mkdir -p "$SSH_DIR"

  chmod 700 "$SSH_DIR"

  ssh-keygen -b 4096 -t rsa -f "$SSH_DIR/id_rsa" -N "" -C "$USER@$HOSTNAME"

  cat "$SSH_DIR/id_rsa.pub" >> "$SSH_DIR/authorized_keys"
fi

# Clone repository
if ! [[ -d "$DOTFILES_DIR" ]]; then
  git clone --branch $BRANCH "https://github.com/florianfischer91/dotfiles.git" "$DOTFILES_DIR"
else
  git -C "$DOTFILES_DIR" pull
fi

# Create path
cd "$DOTFILES_DIR"

# Update Galaxy
ansible-galaxy install -r requirements.yml

# Run playbook
if [[ -f "$CONFIG_DIR/vault-password.txt" ]]; then
  ansible-playbook --diff --extra-vars "@$CONFIG_DIR/values.yaml" --vault-password-file "$CONFIG_DIR/vault-password.txt" "$DOTFILES_DIR/main.yaml" "$@"
else
  ansible-playbook --diff --extra-vars "@$CONFIG_DIR/values.yaml" "$DOTFILES_DIR/main.yaml" "$@"
fi
